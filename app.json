{
  "expo": {
    "description": "A camera app that helps you take safe and secure photos.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/SafeLens-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/SafeLens-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos."
      }
    },
    "android": {
      "permissions": ["CAMERA"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/SafeLens-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "newArchEnabled": true
    },
    "web": {
      "favicon": "./assets/SafeLens-logo.png"
    }
  }
}
